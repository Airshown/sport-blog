<!-- Jumbotron Header -->
<header class="jumbotron hero-spacer">
    <h1>Bienvenue sur le Blog!</h1>
    <p>Ce Blog est le fruit d'un projet au sein de l'ESGI et à été entièrement développé avec la technologie Ruby On Rails.</p>
</header>

<% if notice.present? %>
    <p id="notice"><%= notice %></p>
<% end %>

<hr>

<!-- Title -->
<div class="row">
    <div class="col-lg-12">
        <h3>Les derniers articles</h3>
    </div>
</div>
<!-- /.row -->

<!-- Last Articles -->
<div class="row text-center">
    <% @articles.each do |article| %>
        <div class="col-md-3 col-sm-6 hero-feature">
            <div class="thumbnail">
                <% if article.photo.exists? %>
                    <%= image_tag article.photo(:medium) %> 
                <% else %>
                    <img src="http://placehold.it/800x500" alt="Image par défaut">
                <% end %>
                <div class="caption">
                    <h3><%= article.titre %></h3>
                    <p><%= truncate(strip_tags(article.contenu), length: 165) %></p>
                    
                    <%= link_to article, class: 'btn btn-primary' do %>
                        Lire la suite
                    <% end %>
                </div>
            </div>
        </div>
    <% end %>
</div>