<div class="row">
  <div class="col-md-12">
    <% if notice.present? %><p id="notice"><%= notice %></p><% end %>
    
    <h1>Liste des Catégories</h1>
    
    <br>
    
    <%= link_to new_category_path, class: "btn btn-success" do %>
      <span class="glyphicon glyphicon-plus"></span> Nouveau
    <% end %>
    
    <table class="table">
      <thead>
        <tr>
          <th class="col-md-9">Nom</th>
          <th class="col-md-3">Options</th>
        </tr>
      </thead>
    
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.nom %></td>
            <td>
              <%= link_to edit_category_path(category), class: "btn btn-warning" do %>
                <span class="glyphicon glyphicon-pencil"></span> Modifier
              <% end %>
              <%= link_to category, method: :delete, data: { confirm: 'Voulez-vous vraiment supprimer cette catégorie?' }, class: "btn btn-danger" do %>
                <span class="glyphicon glyphicon-remove"></span> Supprimer
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <div class="pagination">
       <%= will_paginate @categories, :container => false, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>
