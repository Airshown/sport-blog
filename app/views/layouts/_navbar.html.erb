                    <li><%= link_to 'Inscription', new_user_registration_path, :class => active_class('/users/sign_up') %></li>
                    <li><%= link_to 'Connexion', new_user_session_path, :class => active_class('/users/sign_in') %></li>
                <% end %>
            </ul>
