<div class="row">
  <div class="col-md-12">
    <% if notice.present? %><p id="notice"><%= notice %></p><% end %>
    
    <h1>Liste des Articles</h1>
        
    <br>
    
    <%= link_to new_article_path, class: "btn btn-success" do %>
      <span class="glyphicon glyphicon-plus"></span> Nouveau
    <% end %>
    
    <table class="table">
      <thead>
        <tr>
          <th class="col-md-3">Titre</th>
          <th class="col-md-1">Publié</th>
          <th class="col-md-2">Catégorie</th>
          <th class="col-md-2">Créé le </th>
          <th class="col-md-4">Options</th>
        </tr>
      </thead>
    
      <tbody>
        <% @articles.each do |article| %>
          <tr>
            <td><%= article.titre %></td>
            <td>
              <% if !article.masquer %>
                <span class="glyphicon glyphicon-ok-sign"></span>
              <% else %>
                <span class="glyphicon glyphicon-remove-sign"></span>
              <% end %>
            </td>
            <td><%= article.categorie %></td>
            <td><%= article.created_at.strftime('%d/%m/%Y %H:%M') %></td>
            <td>
              <%= link_to article, class: "btn btn-primary" do %>
                <span class="glyphicon glyphicon-eye-open"></span> Voir
              <% end %>
              <%= link_to edit_article_path(article), class: "btn btn-warning" do %>
                <span class="glyphicon glyphicon-pencil"></span> Modifier
              <% end %>
              <%= link_to article, method: :delete, data: { confirm: 'Voulez-vous vraiment supprimer cette article?' }, class: "btn btn-danger" do %>
                <span class="glyphicon glyphicon-remove"></span> Supprimer
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @articles, :container => false %>

  </div>
</div>
