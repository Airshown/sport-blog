<div class="row">
  <div class="col-md-12">
    <% if notice.present? %><p id="notice"><%= notice %></p><% end %>

    <h1>Liste des Articles</h1>
    
    <table class="table">
      <thead>
        <tr>
          <th>Titre</th>
          <th>Contenu</th>
          <th>Catégorie</th>
          <th>Créé le </th>
          <th>Modifié le</th>
          <th>Masquer</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @articles.each do |article| %>
          <tr>
            <td><%= article.titre %></td>
            <td><%= article.contenu %></td>
            <td><%= article.categorie %></td>
            <td><%= article.created_at.strftime('%d/%m/%Y %H:%M') %></td>
            <td><%= article.updated_at.strftime('%d/%m/%Y %H:%M')  %></td>
            <td><%= (if article.masquer then 'oui' else 'non' end) %></td>
            <td><%= link_to 'Voir', article %></td>
            <td><%= link_to 'Modifier', edit_article_path(article) %></td>
            <td><%= link_to 'Supprimer', article, method: :delete, data: { confirm: 'Voulez-vous vraiment supprimer cette article?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @articles, :container => false %>
    
    <br>
    
    <%= link_to 'Nouveau', new_article_path %>

  </div>
</div>
