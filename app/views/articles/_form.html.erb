<%= simple_form_for @article do |f| %>

  <div class="row">
      <div class="form-group col-lg-5">
          <%= f.input :titre, label: 'Titre', class: 'form-control' %>
      </div>
  </div>

  <div class="row">
      <div class="form-group col-lg-5">
          <%= f.input :contenu, label: 'Contenu', class: 'form-control' %>
      </div>
  </div>

  <div class="row">
      <div class="form-group col-lg-5">
          <%= f.association :categorie, label: 'Categorie', class: 'form-control'%>
      </div>
  </div>

  <div class="row">
      <div class="form-group col-lg-5">
          <%= f.input :masquer, label: 'Masquer', class: 'form-control' %>
      </div>
  </div>

  <div class="row">
    <%= f.submit 'Enregistrer', class: 'btn btn-primary' %>
  </div>
<% end %>
