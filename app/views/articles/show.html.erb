<div class="container mt-20">
    <div class="row">
        <div class="col-md-3">
            <p class="lead"><%= t('categories') %></p>
            <div class="list-group">
              <% @categories.each do |category| %>
                <% if category.id == @article.categorie.id %>
                  <a href="" class="list-group-item active"><%= category.nom %></a>
                <% else %>
                  <a href="" class="list-group-item"><%= category.nom %></a>
                <% end %>
              <% end %>
            </div>
        </div>

        <div class="col-md-9">

            <div class="thumbnail">
                <%= image_tag @article.photo(:medium), :class => "img-responsive" %>
                <div class="caption-full">
                    <h5 class="pull-right">Publié le <%= l @article.created_at, format: :short %></h5>
                    <h4><%= @article.titre %></h4>
                    
                    <%= @article.contenu.html_safe %>
                    
                </div>
                
                <hr>
                
                <div class="ratings">
                    <p class="pull-right">2 <%= t('comments') %></p>
                    <p>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star-empty"></span>
                        4.0 étoiles
                    </p>
                </div>
            </div>

            <div class="well">

                <div class="text-right">
                    <a class="btn btn-success"><%= t('leave_comment') %></a>
                </div>

                <hr>

                <div class="row">
                    <div class="col-md-12">
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star-empty"></span>
                        Anonymous
                        <span class="pull-right">10 days ago</span>
                        <p>This product was great in terms of quality. I would definitely buy another!</p>
                    </div>
                </div>

                <hr>

                <div class="row">
                    <div class="col-md-12">
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star-empty"></span>
                        Anonymous
                        <span class="pull-right">12 days ago</span>
                        <p>I've alredy ordered another one!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.container -->

